<section class="mt-7">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-10">
                {{#if date}}
                <h3 class="mt-4">Preço médio do produto (EUR):</h3>
                <p class="small mb-4">Atualizado às {{date.hours}}:{{date.minutes}}.</p>
                {{/if}}
                <ul>
                    <li class="fs-1 text-success mb-5">{{total}} €</li>
                </ul>
                <a class="btn btn-primary px-5 py-3" href="http://localhost:5300/admin">Voltar ao dashboard</a>
        </div>
    </div>
</section>